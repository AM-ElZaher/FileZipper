import zipfile
import os

print("Copy and paste dest folder path:")
des_dir = input()
files = os.listdir()

for file in files:
    print(file)
    zip_file = zipfile.ZipFile(des_dir + "\\" + file + ".zip", "w")
    zip_file.write(file, compress_type=zipfile.ZIP_DEFLATED)
    zip_file.close()
print("done")




